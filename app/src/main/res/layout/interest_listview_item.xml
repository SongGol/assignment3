<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/list_item_check_cb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="12dp"
        android:button="@drawable/custom_checkbox"
        android:focusable="false"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_item_name_tv"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/list_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/list_item_check_cb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/list_item_country_iv"
        tools:text="LG디스플레이" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/list_item_country_iv"
        android:layout_width="24dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/list_item_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/list_item_name_tv"
        app:srcCompat="@drawable/korea" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/list_item_code_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_country_iv"
        app:layout_constraintStart_toEndOf="@+id/list_item_country_iv"
        app:layout_constraintTop_toTopOf="@+id/list_item_country_iv"
        app:layout_constraintEnd_toStartOf="@id/list_item_market_tv"
        tools:text="A034220"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/list_item_market_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_country_iv"
        app:layout_constraintStart_toEndOf="@+id/list_item_code_tv"
        app:layout_constraintTop_toTopOf="@+id/list_item_country_iv"
        tools:text="코스피"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/attraction_border"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="50" />
</androidx.constraintlayout.widget.ConstraintLayout>